.header
    @media media-min-lg
        max-height: 115px
        height: 115px
        transition: all .2s ease-in-out

    .scrolling &
        @media media-min-lg
            max-height: 80px

    &-container
        position: sticky
        top: 0
        box-shadow: none

        .scrolling &
            box-shadow: 0 0 10px rgba(0, 0, 0, .1)