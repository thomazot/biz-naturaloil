.newsletter
    padding: 20px 0
    background: var(--secundary)
    color: var(--secundary-contrast)

    input
        height: 45px
        border: 0
        border-radius: var(--radius)
        box-shadow: none

        &:focus::placeholder
            color: transparent

        @media media-min-lg
            height: 55px

    .std
        color: currentColor

        strong
            text-transform: uppercase
            font-weight: bold

        span
            font-weight: regular

        strong, span
            font-size: 14px
            line-height: 1.3

            @media media-min-lg
                font-size: 18px

    &__form
        container()

        @media media-min-lg
            flex-wrap: nowrap

    &__text
        display: flex
        align-items: center

        span
            display: block

    &__ico
        display: flex
        flex: 0 0 40px
        justify-content: center
        align-items: center
        margin-right: 16px
        width: 40px
        height: 40px
        border-radius: 50%
        background: rgba(255, 255, 255, .2)

        @media media-min-lg
            flex: 0 0 80px
            width: 80px
            height: 80px

        .ico
            width: 20px
            height: 18px
            fill: currentColor

            @media media-min-lg
                width: 46px
                height: 32px

    &__btn
        padding: 0 16px
        height: 45px
        border: 0
        border-radius: var(--radius)
        background: var(--tertiary)
        box-shadow: none
        font-weight: medium
        font-size: 18px

        @media media-min-lg
            height: 55px
            border-radius: 0 var(--radius) var(--radius) 0

    &__name
        @media media-min-lg
            padding-right: 0

        input
            @media media-min-lg
                border-radius: var(--radius) 0 0 var(--radius)

    &__email
        @media media-min-lg
            padding-right: 0
            padding-left: 0

        input
            @media media-min-lg
                border-left: solid 1px var(--border-products)
                border-radius: 0

    &__submit
        @media media-min-lg
            flex: 0 1 250px
            padding-left: 0

        @media (min-width: 1000px)
            flex: 0 0 250px