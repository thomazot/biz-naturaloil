.reviews
    @media media-min-sm
        border-top: solid 1px var(--border-products)

    .subtitle
        color: var(--text-two)
        font-weight: medium
        font-size: 16px

    &__title, &__content
        @media media-min-sm
            container()

    &__content
        @media media-max-lg
            flex-wrap: wrap

    &__title
        @media media-min-sm
            titleCollateral()

            padding: 50px 0 0

    &__resume, &__ratings, &__add
        padding: 0
        box-shadow: none

    &__resume
        @media media-min-lg
            flex: 0 1 190px
            margin-right: 80px

        .rating-box
            display: none !important

        .product-rate
            align-items: flex-start

            .amount
                color: var(--text-two)
                font-weight: regular
                font-size: 14px

    &__no-reviews.std
        p
            display: inline
            color: var(--text-two)
            font-size: 14px

    &__add
        @media media-min-lg
            flex: 0 1 385px

        @media media-max-lg
            flex: 0 0 100%
            margin-left: 0

        .title
            color: var(--text-two)
            font-weight: regular
            font-size: 14px

            span
                display: block

        .form-list
            label
                color: var(--text-two)
                font-weight: regular
                font-size: 14px

            input, select, textarea
                border: solid 1px var(--border-blue)
                box-shadow: none

        .btn
            border: 0
            background: var(--tertiary)
            color: var(--tertiary-contrast)
            font-weight: bold
            font-size: 16px