.breadcrumb
    &__home
        .breadcrumb__link:before
            display: none

    &__link
        color: var(--title)
        font-weight: regular
        font-size: 14px

    &__last
        display: block
        margin-bottom: -2px
        color: var(--secundary)
        font-weight: bold
        font-size: 14px

    &__sep
        color: var(--title)
        font-size: 8px
        line-height: 1

        span
            display: none

        &:before
            icon('\f054')

            display: block
            margin-bottom: -2px